doctype html(lang='en')
head
    meta(charset='utf-8')
    |     
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    |     
    meta(name='viewport', content='width=device-width, initial-scale=1')
    |     
    title MusoFuse
    // Bootstrap
    link(href='bootstrap/css/bootstrap.min.css', rel='stylesheet')
    |     
    link(rel='stylesheet', href='style.css')
  |   
  body
    .container-fluid
      // start of navbar
      nav.navbar.navbar-inverse(role='navigation')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            |               
            span.icon-bar
            |               
            span.icon-bar
          |           
          a.navbar-brand(href='#') MusoFuse
        |         
        #myNavbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='index.html') Home
            |             
            li
              a(href='discovery.html') Discovery
            // Search bar
            form#searchContainer.navbar-form.navbar-left(role='search')
              .form-group
                input.form-control(type='text', placeholder='Search')
              |               
              button.btn.btn-default(type='submit')
                | Search 
                span.glyphicon.glyphicon-search
          // Profile Dropdown menu
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                span.caret
                |   *Username Placeholder 
                img(src='mf-images/profile-placeholder.png', width='25px', height='25px')
              |           
              ul.dropdown-menu
                li
                  a(href='#') Add new track
                |             
                li
                  a(href='#')
                    | View your music 
                    span.badge 42
                |             
                li
                  a(href='#')
                    | View your projects 
                    span.badge 12
                |             
                li.divider(role='separator')
                |             
                li
                  a(href='#') Edit Profile
                |             
                li.divider(role='separator')
                |             
                li
                  a(href='#') Log out
      // end of nav bar
      // start of body content
      .col-md-3
      |             
      .col-md-6
        #loginPanel.panel
          h3 Login:
          |                 
          form
            | Email Address:
            br
            |                 
            input(type='text', placeholder='Username')
            br
            |                     Password:
            br
            |                 
            input(type='password', placeholder='Password')
            br
            br
            |                 
            input.btn.btn-success(type='submit', value='Login')
            |                 
            a.btn.btn-info(href='#', data-toggle='modal', data-target='#registerModal') Register
      |           
      .col-md-3
      // end of main content
      // footer
      // end of footer
    // login modal window
    #loginModal.modal.fade(role='dialog')
      .modal-dialog
        // content
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') &times;
            |                     
            h4.modal-title Login:
          |                 
          .modal-body
            form#loginForm
              | Email Address:
              br
              |                 
              input(type='text', placeholder='Username')
              br
              |                     Password:
              br
              |                 
              input(type='password', placeholder='Password')
              br
              br
          |                 
          .modal-footer
            input.btn.btn-success(type='submit', value='Login', form='loginForm')
            |                 
            a.btn.btn-info(href='#', data-toggle='modal', data-target='#registerModal') Register
            |                 
            button.btn.btn-danger(type='button', data-dismiss='modal') Cancel
    // end of modal
    // register modal window
    #registerModal.modal.fade(role='dialog')
      .modal-dialog
        // content
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') &times;
            |                     
            h4.modal-title Register:
          |                 
          .modal-body
            form#registerForm
              | Email Address:
              br
              |                         
              input(type='text', placeholder='Username')
              br
              |                         Password:
              br
              |                         
              input(type='password', placeholder='Password')
              br
              |                         Confirm Password:
              br
              |                         
              input(type='password', placeholder='Password')
              br
              |                         Musician Name:
              br
              |                         
              input(type='text', placeholder='Musician Name')
              br
              br
              |                         
              input(type='checkbox')
              |  Do you accept the 
              a(href='#') terms
              |  and conditions of use
              br
              br
          |                 
          .modal-footer
            input.btn.btn-success(value='Sign-Up', form='registerForm')
            |                 
            button.btn.btn-danger(type='button', data-dismiss='modal') Cancel
    // end of modal
    // bootstrap and jquery JS files
    script(src='jquery.min.js')
